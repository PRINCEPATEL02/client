const express = require('express');
const cors = require('cors');
// ... other imports

const app = express();

// Add your Netlify frontend URL to the list of allowed origins
const allowedOrigins = [
  'http://localhost:3000', // for your local client
  'http://localhost:3001', // for your local admin
  'https://livechat00.netlify.app' // YOUR LIVE NETLIFY URL
];

const corsOptions = {
  origin: function (origin, callback) {
    if (!origin || allowedOrigins.indexOf(origin) !== -1) {
      callback(null, true);
    } else {
      callback(new Error('Not allowed by CORS'));
    }
  },
  credentials: true,
};

// Use the cors middleware with your options
app.use(cors(corsOptions));

